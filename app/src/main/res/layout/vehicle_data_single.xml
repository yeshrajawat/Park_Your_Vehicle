<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"


    app:cardElevation="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:id="@+id/card_vehicle_id"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingStart="10dp"

            android:textSize="30dp"
            tools:text="RJ144C4260"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:orientation="vertical"
        android:background="@drawable/bg"
                >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:gravity="center"

                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"

                android:textColor="#dbd9d9"
                android:textSize="20dp"
                android:text="Name :" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:id="@+id/card_name"

                android:textSize="20dp"
                tools:text="Yesh Rajawat"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/vehicle_id_const"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#dbd9d9"
                android:textSize="20dp"
                android:text="Vehicle :" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:id="@+id/card_vehicle_name"
                android:textSize="20dp"
                tools:text="Gixxer"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:gravity="center"

                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#dbd9d9"
                android:textSize="20dp"
                android:text="Date Entered :" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:id="@+id/card_date"
                android:textSize="20dp"
                tools:text="03-06-2021"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:gravity="center"

                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#dbd9d9"
                android:textSize="20dp"
                android:text="Time Entered :" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:id="@+id/card_time"
                android:textSize="20dp"
                tools:text="12:12:12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#dbd9d9"
                android:textSize="15dp"
                android:text="Entry By :" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:id="@+id/card_employee_id"
                android:textSize="15dp"
                tools:text="Anirudh"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">

        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:id="@+id/delete_vehicle"
            android:layout_height="wrap_content"
            android:background="@drawable/delete32"
            />
    </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

</LinearLayout>